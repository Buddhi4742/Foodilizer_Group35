@model Foodilizer_Group35.Models.Food

@{
    ViewData["Title"] = "MenuCreate";
    Layout = "~/Views/Shared/_store_admin_layout.cshtml";
}

<main>
    <div class="container-fluid px-4">
        <div class="row">
            <div class="col-8">
                <h1 class="mt-4">Add New Menu Item</h1>
                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item active">Store Admin/Menu/Add new Item</li>
                </ol>


            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <form asp-action="MenuCreate">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @*<div class="form-row row p-2">
                        <div class="form-group col-4">
                            <label asp-for="FoodName" class="control-label"></label>
                            <input asp-for="FoodName" class="form-control" />
                            <span asp-validation-for="FoodName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="Type" class="control-label"></label>
                            <input asp-for="Type" class="form-control" />
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                    </div>*@

                    <div class="form-row row p-2">
                        <div class="form-group col-4">
                            <label asp-for="FoodName" class="control-label"></label>
                            <input asp-for="FoodName" class="form-control" />
                            <span asp-validation-for="FoodName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="Type" class="control-label"></label>
                            <input asp-for="Type" class="form-control" />
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row row p-2">

                    </div>
                    <div class="form-row row p-2">
                        <div class="form-group col-4">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="Ingredient" class="control-label"></label>
                            <input asp-for="Ingredient" class="form-control" />
                            <span asp-validation-for="Ingredient" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row row p-2">
                        <div class="form-group col-4">
                            <label asp-for="ImagePath" class="control-label"></label>
                            <input asp-for="ImagePath" class="form-control" />
                            <span asp-validation-for="ImagePath" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="PrefScore" class="control-label"></label>
                            <input asp-for="PrefScore" class="form-control" />
                            <span asp-validation-for="PrefScore" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row row p-2">
                        <div class="form-group col-4">
                            <label asp-for="Featured" class="control-label"></label>
                            <input asp-for="Featured" class="form-control" />
                            <span asp-validation-for="Featured" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="Category" class="control-label"></label>
                            <input asp-for="Category" class="form-control" />
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row row p-2">
                        <div class="form-group col-4">
                            <label asp-for="SubCategory" class="control-label"></label>
                            <input asp-for="SubCategory" class="form-control" />
                            <span asp-validation-for="SubCategory" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="CategoryRating" class="control-label"></label>
                            <input asp-for="CategoryRating" class="form-control" />
                            <span asp-validation-for="CategoryRating" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row row p-2">
                        <div class="form-group col-4">
                            <label asp-for="Quantity" class="control-label"></label>
                            <input asp-for="Quantity" class="form-control" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="Veg" class="control-label"></label>
                            <input asp-for="Veg" class="form-control" />
                            <span asp-validation-for="Veg" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row row p-2">
                        <div class="form-group col-4">
                            <label asp-for="SpicyLevel" class="control-label"></label>
                            <input asp-for="SpicyLevel" class="form-control" />
                            <span asp-validation-for="SpicyLevel" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="Hot" class="control-label"></label>
                            <input asp-for="Hot" class="form-control" />
                            <span asp-validation-for="Hot" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row row p-2">
                        <div class="form-group col-4">
                            <label asp-for="Organic" class="control-label"></label>
                            <input asp-for="Organic" class="form-control" />
                            <span asp-validation-for="Organic" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row row p-2">
                        <div class="form-group col-2">
                            <input type="submit" class="btn btn-primary w-75" asp-action="MenuNewFooditem" asp-route-id="@TempData["MenuID"]" value="Create" class="btn btn-primary" />
                        </div>
                        <div class="form-group col-2 ">
                            <a asp-action="Menu" class="btn btn-secondary w-75 ">Back</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</main>
