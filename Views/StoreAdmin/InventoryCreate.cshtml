@model Foodilizer_Group35.Models.Item

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_store_admin_layout.cshtml";
}
<main>
    <div class="container-fluid px-4">
        <div class="row">
            <div class="col-8">
                <h1 class="mt-4">Inventory</h1>
                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item active">Store Admin/Inventory/Add new Item</li>
                </ol>
                
                
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <form asp-action="InventoryCreate">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row row p-2">
                        <div class="form-group col-4">
                            <label class="control-label pb-2"> Item name</label>
                            <input asp-for="ItemName" class="form-control" />
                            <span asp-validation-for="ItemName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row row p-2 ">
                        <div class="form-group col-4">
                            <label class="control-label pb-2">Item Quantity</label>
                            <input asp-for="ItemQuantity" class="form-control" />
                            <span asp-validation-for="ItemQuantity" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label class="control-label pb-2">Measurement of the Item</label>
                            <input asp-for="Measurement" class="form-control" />
                            <span asp-validation-for="Measurement" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row row p-2">
                        <div class="form-group col-4">
                            <label class="control-label pb-2">Daily Quantity Usage Limit</label>
                            <input asp-for="QuantityLimit" class="form-control" />
                            <span asp-validation-for="QuantityLimit" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row row p-2">
                        <div class="form-group col-2">
                            <input type="submit" value="Create" class="btn btn-primary w-75" />
                        </div>
                        <div class="form-group col-2">
                            <a asp-action="Inventory" class="btn btn-secondary w-75 ">Back</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        
    </div>
</main>

