@model Foodilizer_Group35.Models.Item

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_store_admin_layout.cshtml";
}

<main>
    <div class="container-fluid px-4">
        <div class="row">
            <div class="col-8">
                <h1 class="mt-4">Inventory</h1>
                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item active">Store Admin/Inventory/Edit Item</li>
                </ol>


            </div>
        </div>
        <h1>Edit</h1>

        <div class="row">
            <div class="col-md-12">
                <form asp-action="InventoryEdit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row row p-2">
                        <div class="form-group col-4">
                            <label asp-for="RestId" class="control-label"></label>
                            <input asp-for="RestId" class="form-control" />
                            <span asp-validation-for="RestId" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="ItemId" />
                        <div class="form-group col-8">
                            <label asp-for="ItemName" class="control-label"></label>
                            <input asp-for="ItemName" class="form-control" />
                            <span asp-validation-for="ItemName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row row p-2">
                        <div class="form-group col-4">
                            <label asp-for="ItemQuantity" class="control-label"></label>
                            <input asp-for="ItemQuantity" class="form-control" />
                            <span asp-validation-for="ItemQuantity" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="Measurement" class="control-label"></label>
                            <input asp-for="Measurement" class="form-control" />
                            <span asp-validation-for="Measurement" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row row p-2">
                        <div class="form-group col-4">
                            <label asp-for="QuantityLimit" class="control-label"></label>
                            <input asp-for="QuantityLimit" class="form-control" />
                            <span asp-validation-for="QuantityLimit" class="text-danger"></span>
                        </div>

                        <div class="form-group col-4">
                            <label asp-for="Alert" class="control-label"></label>
                            <input asp-for="Alert" class="form-control" />
                            <span asp-validation-for="Alert" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row row p-2">
                        <div class="form-group col-2">
                            <input type="submit" value="Save" class="btn btn-primary w-75 " />
                        </div>
                        <div class="form-group col-2">
                            <a asp-action="Inventory" class="btn btn-secondary w-75 ">Back</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        @*@section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }*@
    </div>
</main>