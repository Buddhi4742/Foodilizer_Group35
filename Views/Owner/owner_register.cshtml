@model Foodilizer_Group35.Models.Restaurant
@{
    ViewData["Title"] = "Owner Register Page";
    Layout = "~/Views/Shared/_owner_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="Description" content="Enter your description here" />
    <title>Foodies</title>
    <!-- bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,700">
    <title>Bootstrap Simple Registration Form</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script src="~/js/owner_home.js"></script>
    <!-- OWN CSS -->
    <link rel="stylesheet" href="~/css/owner_home.css">

</head>

<body>

    <form class="register" asp-action="RegisterDetails" id="form1">
        <center>
            <h2> Your journey towards a thriving restaurant</h2> <h2> business starts here </h2>
            <h4>Enter Owner Details</h4>
        </center>
        <div class="form-row">
            <div class="form-group col-md-8">
                <label for="inputownFirstname">Owner Name</label>
                <input asp-for="OwnerName" class="form-control" id="inputownFirstName" placeholder="Owner Firstname and Last name" required>
                <span asp-validation-for="OwnerName" class="text-danger"></span>
            </div>

            <div class="form-group col-md-3">
                <label for="inputrestLogo">Restaurant Logo</label>
                <input type="file" class="form-control" id="inputrestLogo" @*onchange="getImagePreview(event)"*@ name="logo">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputownmobile">Mobile No</label>
                <input asp-for="OwnerContact" class="form-control" id="inputownmobile" placeholder="Mobile No" required>
                <span asp-validation-for="OwnerContact" class="text-danger"></span>
            </div>
            <div class="form-group col-md-5 pb-2">
                <label for="inputownemail">Email</label>
                <input asp-for="OwnerEmail" type="email" class="form-control" id="inputownEmail" placeholder="Email" required>
                <span asp-validation-for="OwnerEmail" class="text-danger"></span>
            </div>

        </div>
        <center> <h4>Enter your Restaurant Details </h4></center>

        <p style="color:red">@ViewBag.Error</p>
        <p style="color:red">@TempData["Error"]</p>
        <div class="form-row">
            <div class="form-group col-md-7">
                <label for="inputRestName">Restaurant Name</label>
                <input asp-for="Rname" class="form-control" id="inputRestname" placeholder="Restaurant Name" required>
                <span asp-validation-for="Rname" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label for="inputRestDesc">Restaurant Description</label>
                <textarea asp-for="Rabout" class="form-control" id="inputRestDesc" rows="3" placeholder="Restaurant Description limit to 50 characters" required> </textarea>
                <span asp-validation-for="Rabout" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputRestEmail">Restaurant Email</label>
                <input asp-for="Remail" type="email" class="form-control" id="inputRestEmail" placeholder="Email" required>
                <span asp-validation-for="Remail" class="text-danger"></span>
            </div>
            <div class="form-group col-md-5">
                <label for="inputRestPhone">Restaurant Phone No</label>
                <input asp-for="RestContact" class="form-control" id="inputrestcontact" placeholder="Phone Number" required>
                <span asp-validation-for="RestContact" class="text-danger"></span>
            </div>
            <div class="form-group col-md-11">
                <label for="inputRestweb">Restaurant Website URL</label>
                <input asp-for="WebsiteLink" type="url" class="form-control" id="inputRestWeb" placeholder="Website URL" required>
                <span asp-validation-for="WebsiteLink" class="text-danger"></span>
            </div>
        </div>
        <center> <h4>Restaurant Location  </h4></center>

        <div class="row">
            <div class="form-group col-md-9">
                <label for="inputRestAddr">Restaurant Address</label>
                <input asp-for="Raddress" class="form-control" id="inputRestAddr" placeholder="Address" required>
                <span asp-validation-for="Raddress" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label for="inputRestDesc">Price Range</label>
                <select asp-for="PriceRange" class="custom-select my-1 mr-sm-2" id="inputRestPrice">
                    <option value="1">Low</option>
                    <option value="2">Medium</option>
                    <option value="3">High</option>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label for="inputRestDist">Restaurant District </label>
                <input asp-for="Rdistrict" class="form-control" id="inputRestDist" placeholder="District" required>
                <span asp-validation-for="Rdistrict" class="text-danger"></span>
            </div>
            <div class="form-group col-md-8">
                <label for="inputRestFeat">Restaurant Features(use ,)</label>
                <input asp-for="Feature" class="form-control" id="inputRestFeat" rows="3" placeholder="Dine in,outdoor seating,Food Truck etc" required>
                <span asp-validation-for="Feature" class="text-danger"></span>
            </div>
            <div class="form-group col-md-11">
                <label for="inputRestMap">Restaurant Google map URL</label>
                <input asp-for="MapLink" type="url" class="form-control" id="inputRestMap" placeholder="Google map URL" required>
                <span asp-validation-for="MapLink" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-7">
                <label for="inputtDietRest">Food Options Available</label>
                <input asp-for="SpecialDiet" class="form-control" id="inputDietRest" placeholder="Eg: Vegan, Vegetarian, Some vegan options" required>
                <span asp-validation-for="SpecialDiet" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label for="inputOpenFrom">Open Hours</label>
                <input asp-for="OpenHour" class="form-control" id="inputOpenFrom" placeholder="Eg: 9AM-10PM" required>
                <span asp-validation-for="OpenHour" class="text-danger"></span>
            </div>

        </div>

        <div class="row">
            <div class="form-group col-md-7">
                <label for="inputCrePassword">Create Password</label>
                <input asp-for="Rpassword" type="password" class="form-control" id="password" placeholder="Password" required onkeyup="validatePass()">
                @*<input id="password" asp-for="Password" class="form-control rounded-left" placeholder="Password" type="password" required onkeyup="validatePass()" />*@
            </div>
            <div class="form-group col-md-4">
                <label for="inputMeals">Meals</label>
                <input asp-for="MealType" type="text" class="form-control" id="inputMeals" placeholder="breakfast, lunch & Dinner" required>
                <span asp-validation-for="MealType" class="text-danger"></span>
            </div>
            <div class="form-group col-md-7">
                <label for="inputCnfPassword">Confirm Password</label>
                <input type="password" class="form-control" id="password2" placeholder="Confirm Password" required onkeyup="validatePass()">
                @*<input id="password2" class="form-control rounded-left" placeholder="Confirm Password" type="password" required onkeyup="validatePass()" />*@
            </div>
            <div class="form-group col-md-4">
                <label for="inputCuisine">Cuisines</label>
                <input asp-for="Cuisine" type="text" class="form-control" id="inputCuisines" placeholder="Chinese,North Indian,South Indian etc" required>
                <span asp-validation-for="Cuisine" class="text-danger"></span>
            </div>
        </div>

        <button onclick="event.preventDefault();formSubmit();" type="submit" class="main-btn"> Next</button>
        <button type="reset" class="main-btn">
            Reset
        </button>
      

        <button class="main-btn ms-lg-4 mt-lg-0 mt-4" style="align-items:flex-end">
            <a asp-area="" asp-controller="Owner" asp-action="owner_redirect">
                <i class="fas fa-angle-left ps-3"> </i>     Back
            </a>
        </button>


    </form>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script type="text/javascript">
    var confirmPass = false;
    /*alert("v");*/
    function validatePass() {
        if (document.getElementById("password").value == document.getElementById("password2").value) {
            document.getElementById("password").style.backgroundColor = "";
            document.getElementById("password2").style.backgroundColor = "";
            confirmPass = true;
            /* alert("validation passes");*/
        } else {
            document.getElementById("password").style.backgroundColor = "LightPink";
            document.getElementById("password2").style.backgroundColor = "LightPink";
            /*alert("validation failed false");*/
            confirmPass = false;
        }
        /*alert(confirmPass);*/
    }

    /* form.addEventListener('submit', formSubmit);*/
    function formSubmit() {
        validatePass();
        if (confirmPass == true) {
            document.getElementById("form1").submit();
            /*alert("hi");*/
        }
        else {
            alert("Invalid Details Entered, Please Check and try again.");
        }
    }
</script>
<script src="~/js/jquery.min.js"></script>
<script src="~/js/popper.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/main.js"></script>