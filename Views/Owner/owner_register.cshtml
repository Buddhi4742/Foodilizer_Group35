@{
    ViewData["Title"] = "Owner Register Page";
    Layout = "~/Views/Shared/_owner_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="Description" content="Enter your description here" />
    <title>Foodies</title>
    <!-- bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,700">
    <title>Bootstrap Simple Registration Form</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script src="~/js/owner_home.js"></script>
    <!-- OWN CSS -->
    <link rel="stylesheet" href="~/css/owner_home.css">

</head>

<body>

    
     
    <form>
        <h1> Your journey towards a thriving restaurant business starts here </h1>
        <h5>Enter Owner Details</h5>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="inputownFirstname">First Name</label>
                <input type="text" class="form-control" id="inputownFirstName" placeholder="Firstname">
            </div>
            <div class="form-group col-md-4">
                <label for="inputownLastname">Last Name</label>
                <input type="text" class="form-control" id="inputownLastname" placeholder="Lastname">
            </div>
            <div class="form-group col-md-4">
                <label for="inputrestLogo">Restaurant Logo</label>
                <input type="file" class="form-control" id="inputrestLogo" onchange="getImagePreview(event)">
            </div>


        </div>

        <div class="form-row">
            <div class="form-group col-md-8">
                <label for="inputownemail">Email</label>
                <input type="email" class="form-control" id="inputownEmail" placeholder="Email">
            </div>
            <div class="form-group col-md-4">
                <div id="preview"> </div>
            </div>
            <div class="form-group col-md-8">
                <label for="inputownmobile">Mobile No</label>
                <input type="tel" class="form-control" id="inputownmobile" placeholder="Mobile No">
            </div>

        </div>
        <h5>Enter your Restaurant Details </h5>

        <div class="form-row">
            <div class="form-group col-md-8">
                <label for="inputRestName">Restaurant Name</label>
                <input type="text" class="form-control" id="inputRestname" placeholder="Restaurant Name">
            </div>
            <div class="form-group col-md-4">
                <label for="inputRestDesc">Restaurant Description</label>

                <textarea class="form-control" id="inputRestDesc" rows="5" placeholder="Restaurant Description"> </textarea>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-8">
                <label for="inputRestPhone">Restaurant Phone No</label>
                <input type="tel" class="form-control" id="inputRestPhone" placeholder="Phone No">
            </div>

            <div class="form-group col-md-8">
                <label for="inputRestEmail">Restaurant Email</label>
                <input type="email" class="form-control" id="inputRestEmail" placeholder="Email">
            </div>
            <div class="form-group col-md-8">
                <label for="inputRestweb">Restaurant Website URL</label>
                <input type="url" class="form-control" id="inputRestWeb" placeholder="Website URL">
            </div>

        </div>


        <h5>Restaurant Location  </h5>
        <div class="row">
            <div class="form-group col-md-8">
                <label for="inputRestAddr">Restaurant Address</label>
                <input type="text" class="form-control" id="inputRestAddr" placeholder="Address">
            </div>
            <div class="form-group col-md-4">
                <label for="inputRestDesc">Price Range</label>
                <select class="custom-select my-1 mr-sm-2" id="inputRestPrice">
                    <option selected>Choose...</option>
                    <option value="1">Low</option>
                    <option value="2">Medium</option>
                    <option value="3">High</option>
                </select>

            </div>
            <div class="form-group col-md-8">
                <label for="inputRestProv">Restaurant Province</label>
                <input type="text" class="form-control" id="inputRestProv" placeholder="Province">
            </div>
            <div class="form-group col-md-4">
                <label for="inputRestType">Restaurant Type/types(use ,)</label>

                <textarea class="form-control" id="inputRestType" rows="3" placeholder="Family style,Casual Dining,Fast Food,cafe etc"> </textarea>
            </div>
            <div class="form-group col-md-8">
                <label for="inputRestDist">Restaurant District </label>
                <input type="text" class="form-control" id="inputRestDist" placeholder="District">
            </div>
            <div class="form-group col-md-4">
                <label for="inputRestFeat">Restaurant Features(use ,)</label>

                <textarea class="form-control" id="inputRestFeat" rows="3" placeholder="Dine in,outdoor seating,Food Truck etc"> </textarea>
            </div>
            <div class="form-group col-md-8">
                <label for="inputRestMap">Restaurant Google map URL</label>
                <input type="url" class="form-control" id="inputRestMap" placeholder="Google map URL">
            </div>
            <div class="form-group col-md-4">
                <label for="inputRestFeat">Restaurant Features(use ,)</label>

                <textarea class="form-control" id="inputRestFeat" rows="3" placeholder="Dine in,outdoor seating,Food Truck etc"> </textarea>
            </div>
        </div>











            <div class="row">
                <div class="form-group col-md-4">
                    <label for="inputState">State</label>
                    <select id="inputState" class="form-control">
                        <option selected>Choose...</option>
                        <option>...</option>
                    </select>
                </div>
                <div class="form-group col-md-2">
                    <label for="inputZip">Zip</label>
                    <input type="text" class="form-control" id="inputZip">
                </div>
            </div>
            <div class="form-group">
                <label for="inputAddress2">Address 2</label>
                <input type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor">
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        Check me out
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Sign in</button>
    </form>








</body>
</html>