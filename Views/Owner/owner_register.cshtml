@model Foodilizer_Group35.Models.Restaurant


@{
    ViewData["Title"] = "Owner Register Page";
    Layout = "~/Views/Shared/_owner_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="Description" content="Enter your description here" />
    <title>Foodies</title>
    <!-- bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,700">
    <title>Bootstrap Simple Registration Form</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script src="~/js/owner_home.js"></script>
    <!-- OWN CSS -->
    <link rel="stylesheet" href="~/css/owner_home.css">

</head>

<body>



    <form class="register" asp-action="Owner_register" id="form2">
        <h2> Your journey towards a thriving restaurant business starts here </h2>
        <p style="color:red">@ViewBag.Error</p>
        <h4>Enter Owner Details</h4>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-row">
            <div class="form-group col-md-8">
                <label asp-for="OwnerName" class="control-label"> Full  Name</label>
                <input asp-for="OwnerName" class="form-control" placeholder="fullname" />
                <span asp-validation-for="OwnerName"></span>

            </div>

            <div class="form-group col-md-4">
                <label for="inputrestLogo">Restaurant Logo</label>
                <input type="file" class="form-control" id="inputrestLogo" onchange="getImagePreview(event)">
            </div>


        </div>

        <div class="form-row">
            <div class="form-group col-md-8">
                <label asp-for="OwnerEmail" class="control-label">Owner Email </label>
                <input asp-for="OwnerEmail" class="form-control" placeholder="Email" />
                <span asp-validation-for="OwnerEmail"></span>

            </div>
            <div class="form-group col-md-4">
                <div id="preview"> </div>
            </div>
            <div class="form-group col-md-8">
                <label asp-for="OwnerContact" class="control-label"> Mobile No </label>
                <input asp-for="OwnerContact" class="form-control" placeholder="Contact" />
                <span asp-validation-for="OwnerContact"> </span>
            </div>

        </div>
        <h4>Enter your Restaurant Details </h4>

        <div class="form-row">
            <div class="form-group col-md-8">
                <label asp-for="Rname" class="control-label"> Restaurant Name </label>
                <input asp-for="Rname" class="form-control" placeholder="Restaurant Name" />
                <span asp-validation-for="Rname"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Rabout" class="control-label">Restaurant Description</label>
                <textarea asp-for="Rabout" class="form-control" rows="5" placeholder="Restaurant Description"> </textarea>

                <span asp-validation-for="Rabout"></span>
            </div>
        </div>


        <div class="row">
            <div class="form-group col-md-8">
                <label asp-for="Remail" class="control-label"> Restaurant Email</label>
                <input asp-for="Remail" class="form-control" placeholder="Email" />
                <span asp-validation-for="Remail"></span>
            </div>
            <div class="form-group col-md-4">
                <label for="inputRestPhone">Restaurant Phone No</label>
                <input type="tel" class="form-control" id="inputRestPhone" placeholder="Phone No">
            </div>
            <div class="form-group col-md-12">
                <label asp-for="WebsiteLink" class="control-label"> Restaurant Website URL</label>
                <input asp-for="WebsiteLink" class="form-control" placeholder="Website URL" />
                <span asp-validation-for="WebsiteLink"></span>
            </div>

        </div>


        <h4>Restaurant Location  </h4>
        <div class="row">
            <div class="form-group col-md-12">
                <label asp-for="Raddress" class="control-label"> Restaurant Address</label>
                <input asp-for="Raddress" class="form-control" placeholder="Address" />
                <span asp-validation-for="Raddress"></span>
            </div>

            <div class="form-group col-md-8">
                <label asp-for="Rprovince" class="control-label"> Restaurant Province</label>
                <input asp-for="Rprovince" class="form-control" />

            </div>

            <div class="form-group col-md-4">

                <label asp-for="PriceRange" class="control-label"> Price Range</label>
                <select class="custom-select my-1 mr-sm-2" id="inputRestPrice" asp-for="PriceRange">
                    <option selected>Choose...</option>
                    <option value="1">Low</option>
                    <option value="2">Medium</option>
                    <option value="3">High</option>
                </select>
                <span asp-validation-for="PriceRange"></span>
            </div>



            <div class="form-group col-md-8">
                <label asp-for="Rdistrict" class="control-label"> Restaurant District</label>
                <input asp-for="Rdistrict" class="form-control" placeholder="District" />
                <span asp-validation-for="Rdistrict" class="text-danger"></span>

            </div>
            <div class="form-group col-md-4">
                <label asp-for="RestType" class="control-label">Restaurant Type/types</label>
                <input asp-for="RestType" class="form-control" placeholder="Family style,Casual Dining,Fast Food,cafe etc" />
                <span asp-validation-for="RestType" class="text-danger"></span>

            </div>

            <div class="form-group col-md-8">
                <label asp-for="MapLink" class="control-label"> Restaurant Google map URL</label>
                <input asp-for="MapLink" class="form-control" placeholder="Google map URL" />
                <span asp-validation-for="MapLink" class="text-danger"></span>
            </div>

            <div class="form-group col-md-4">
                <label asp-for="Feature" class="control-label"> Restaurant Features</label>
                <input asp-for="Feature" class="form-control" placeholder="Dine in,outdoor seating,Food Truck etc" />
                <span asp-validation-for="Feature" class="text-danger"></span>

            </div>
        </div>




        <div class="row">
            <div class="form-group col-md-4">
                <label asp-for="OpenHour" class="control-label"> Open Time From</label>
                <input asp-for="OpenHour" class="form-control" />
                <span asp-validation-for="OpenHour" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label for="inputOpenTo">To</label>
                <input type="time" class="form-control" id="inputOpenTo">
            </div>
            <div class="form-group col-md-4">
                <label asp-for="SpecialDiet" class="control-label"> Dietry Restriction</label>
                <input asp-for="SpecialDiet" class="form-control" />
                <span asp-validation-for="SpecialDiet" placeholder="Vegetarianism,Veganism etc"></span>

            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-8">
                <label asp-for="Rpassword" class="control-label"> Create Password</label>
                <input asp-for="Rpassword" class="form-control" />
                <span asp-validation-for="Rpassword" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="MealType" class="control-label"> Meals</label>
                <input asp-for="MealType" class="form-control" placeholder="breakfast, lunch & Dinner" />
                <span asp-validation-for="MealType" class="text-danger"></span>
            </div>
            <div class="form-group col-md-8">
                <label for="inputCnfPassword">Confirm Password</label>
                <input type="password" class="form-control" id="inputCnfPassword">
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Cuisine" class="control-label"> Cuisines</label>
                <input asp-for="Cuisine" class="form-control" placeholder="Chinese,North Indian,South Indian etc" />
                <span asp-validation-for="Cuisine" class="text-danger"></span>
            </div>
        </div>


        <button type="submit" class="main-btn" onclick="formSubmit()">
            Register
        </button>
        <button type="reset" class="main-btn">
            Reset
        </button>
        <div>
            <a asp-action="Owner_price">Back to List</a>
        </div>


    </form>
