@model Foodilizer_Group35.Models.Restaurant
@{
    ViewData["Title"] = "Owner Register Page";
    Layout = "~/Views/Shared/_owner_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="Description" content="Enter your description here" />
    <title>Foodies</title>
    <!-- bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,700">
    <title>Bootstrap Simple Registration Form</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script src="~/js/owner_home.js"></script>
    <!-- OWN CSS -->
    <link rel="stylesheet" href="~/css/owner_home.css">

</head>

<body>

    <form class="register" asp-action="RegisterDetails" id="form1">
        <h2> Your journey towards a thriving restaurant business starts here </h2>
        <h4>Enter Owner Details</h4>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="inputownFirstname">Owner Name</label>
                <input asp-for="OwnerName" class="form-control" id="inputownFirstName" placeholder="Owner Firstname and Last name" required>
                <span asp-validation-for="OwnerName" class="text-danger"></span>
            </div>

            @*<div class="form-group col-md-4">
                <label for="inputrestLogo">Restaurant Logo</label>
                <input type="file" class="form-control" id="inputrestLogo" onchange="getImagePreview(event)">
            </div>*@
        </div>

        <div class="form-row">
            <div class="form-group col-md-8">
                <label for="inputownemail">Email</label>
                <input asp-for="OwnerEmail" class="form-control" id="inputownEmail" placeholder="Email" required>
                <span asp-validation-for="OwnerEmail" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <div id="preview"> </div>
            </div>
            <div class="form-group col-md-8">
                <label for="inputownmobile">Mobile No</label>
                <input asp-for="OwnerContact" class="form-control" id="inputownmobile" placeholder="Mobile No" required>
                <span asp-validation-for="OwnerContact" class="text-danger"></span>
            </div>

        </div>
        <h4>Enter your Restaurant Details </h4>

        <div class="form-row">
            <div class="form-group col-md-8">
                <label for="inputRestName">Restaurant Name</label>
                <input asp-for="Rname" class="form-control" id="inputRestname" placeholder="Restaurant Name" required>
                <span asp-validation-for="Rname" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label for="inputRestDesc">Restaurant Description</label>
                <textarea asp-for="Rabout" class="form-control" id="inputRestDesc" rows="5" placeholder="Restaurant Description limit to 50 characters" required> </textarea>
                <span asp-validation-for="Rabout" class="text-danger"></span>
            </div>
        </div>


        <div class="row">
            <div class="form-group col-md-8">
                <label for="inputRestEmail">Restaurant Email</label>
                <input asp-for="Remail" class="form-control" id="inputRestEmail" placeholder="Email" required>
                <span asp-validation-for="Remail" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label for="inputRestPhone">Restaurant Phone No</label>
                <input type="tel" class="form-control" id="inputRestPhone" placeholder="Phone No" required> 
            </div>
            <div class="form-group col-md-12">
                <label for="inputRestweb">Restaurant Website URL</label>
                <input type="url" class="form-control" id="inputRestWeb" placeholder="Website URL" required>
            </div>

        </div>


        <h4>Restaurant Location  </h4>
        <div class="row">
            <div class="form-group col-md-8">
                <label for="inputRestAddr">Restaurant Address</label>
                <input type="text" class="form-control" id="inputRestAddr" placeholder="Address" required>
            </div>
            <div class="form-group col-md-4">
                <label for="inputRestDesc">Price Range</label>
                <select class="custom-select my-1 mr-sm-2" id="inputRestPrice">
                    <option value="1">Low</option>
                    <option value="2">Medium</option>
                    <option value="3">High</option>
                </select>
            </div>
            <div class="form-group col-md-4">
                <label for="inputRestType">Restaurant Type/types(use ,)</label>

                <input type="text" class="form-control" id="inputRestType" rows="3" placeholder="Family style,Casual Dining,Fast Food,cafe etc">
            </div>


            <div class="form-group col-md-8">
                <label for="inputRestDist">Restaurant District </label>
                <input type="text" class="form-control" id="inputRestDist" placeholder="District">
            </div>
            <div class="form-group col-md-4">
                <label for="inputRestFeat">Restaurant Features(use ,)</label>

                <input type="text" class="form-control" id="inputRestFeat" rows="3" placeholder="Dine in,outdoor seating,Food Truck etc">
            </div>


            <div class="form-group col-md-8">
                <label for="inputRestMap">Restaurant Google map URL</label>
                <input type="url" class="form-control" id="inputRestMap" placeholder="Google map URL">
            </div>

            <div class="form-group col-md-4">
                <label for="inputRestFeat">Restaurant Features(use ,)</label>

                <input type="text" class="form-control" id="inputRestFeat" rows="3" placeholder="Dine in,outdoor seating,Food Truck etc">
            </div>
        </div>




        <div class="row">
            <div class="form-group col-md-4">
                <label for="inputOpenFrom">Open Time From</label>
                <input type="time" class="form-control" id="inputOpenFrom">
            </div>
            <div class="form-group col-md-4">
                <label for="inputOpenTo">To</label>
                <input type="time" class="form-control" id="inputOpenTo">
            </div>
            <div class="form-group col-md-4">
                <label for="inputtDietRest">Dietry Restriction</label>
                <input type="text" class="form-control" id="inputDietRest" placeholder="Vegetarianism,Veganism etc">
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-8">
                <label for="inputCrePassword">Create Password</label>
                <input type="password" class="form-control" id="inputCrePassword">
            </div>
            <div class="form-group col-md-4">
                <label for="inputMeals">Meals</label>
                <input type="text" class="form-control" id="inputMeals" placeholder="breakfast, lunch & Dinner">
            </div>
            <div class="form-group col-md-8">
                <label for="inputCnfPassword">Confirm Password</label>
                <input type="password" class="form-control" id="inputCnfPassword">
            </div>
            <div class="form-group col-md-4">
                <label for="inputCuisine">Cuisines</label>
                <input type="text" class="form-control" id="inputCuisines" placeholder="Chinese,North Indian,South Indian etc">
            </div>
        </div>


        <button type="submit" class="main-btn"> <a asp-area="" asp-controller="Owner" asp-action="owner_price"> Next</a> </button>
        <button type="reset" class="main-btn">
            Reset
        </button>
    </form>
</body>
</html>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
