@model IEnumerable<Foodilizer_Group35.Models.Food>

@{
    ViewData["Title"] = "FoodIndex";
    Layout = "~/Views/Shared/_home_Layout.cshtml";
}

<h1>FoodIndex</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MenuId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DietryType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrefScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Featured)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MenuId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingredient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DietryType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrefScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Featured)
            </td>
            <td>
                
                <a asp-action="Details" asp-route-id="@item.FoodId">Visit Resturant</a> |
                
            </td>
        </tr>
}
    </tbody>
</table>
