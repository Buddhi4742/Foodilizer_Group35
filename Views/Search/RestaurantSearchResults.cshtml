@model IEnumerable<Foodilizer_Group35.Models.Restaurant>

@{
    ViewData["Title"] = "Search Results";
    Layout = "~/Views/Shared/_home_Layout.cshtml";
}
<head>
    
    <link rel="stylesheet" href="~/css/search.css"/>
</head>
<body>
    <div class="container component">
        <div class="row">
            <div class="col-lg-12 search-form">
                <form id="search-form" asp-action="RestaurantSearchResults">
                    <div class="row">
                        <div class="col-12">
                            <div class="row no-gutters">

                                <div class="col-lg-6 p-0">
                                    <input type="text" placeholder="Search..." class="form-control" id="search" name="searchString">
                                </div>
                                <div class="col-lg-2  p-0 ml-2">
                                    <select class="form-control" id="district" name="district">
                                        <option>All Locations</option>
                                        @foreach (var locations in ViewBag.restlocation)
                                        {
                                            <option>@locations</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-lg-2 p-0 ml-2">
                                    <select class="form-control" id="searchtype" name="searchtype">
                                        <option>Restaurant</option>
                                        <option>Food</option>
                                    </select>
                                </div>

                                <div class="col-lg-1 p-0">
                                    <button type="submit" class="btn btn-base">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        @foreach (var item in Model) {


<div class="result-card-body">
                <section class="search-result-item align-content-center">
                    <a class="image-link" href="#">
                        @if (item.RestaurantImage != null)
                        {
                            <img src="@Url.Content(item.RestaurantImage.MainImagePath)" class="image" onerror="this.onerror=null; this.src='https://media.istockphoto.com/vectors/restaurant-icon-vector-isolated-on-white-background-restaurant-sign-vector-id1029059560'" />
                        }
                        else
                        {
                            <img class="image" src="https://media.istockphoto.com/vectors/restaurant-icon-vector-isolated-on-white-background-restaurant-sign-vector-id1029059560" />
                        }

                    </a>
                    <div class="search-result-item-body">
                        <div class="row">
                            <div class="col-sm-9">
                                <h4 class="search-result-item-heading"><a asp-controller="Search" asp-action="redirectstore" asp-route-id="@item.RestId">@Html.DisplayFor(modelItem => item.Rname)</a></h4>
                                <span class="info">@Html.DisplayFor(modelItem => item.Raddress)</span>
                                <br />
                                <span class="description">@Html.DisplayFor(modelItem => item.MealType)</span>
                                <br />
                                <span class="description">@Html.DisplayFor(modelItem => item.OpenHour)</span>
                            </div>
                            <div class="col-sm-3 text-align-center">
                                <p class="value3 mt-sm">
                                    <i class="fa fa-circle"></i>
                                    5.0
                                </p>
                                <p class="fs-mini text-muted">100 Reviews</p>
                                @*<a class="btn btn-primary btn-info btn-sm" href="#">More</a>*@
                                <a class="btn btn-primary btn-info btn-sm" asp-controller="Search" asp-action="redirectstore" asp-route-id="@item.RestId">More</a>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        }
    </div>    


    </body>
