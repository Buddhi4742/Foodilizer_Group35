@{
    ViewData["Title"] = "Shopping Cart";
    Layout = "~/Views/Shared/_bronze_store_layout.cshtml";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<link rel="stylesheet" href="~/css/store_front/silver_cart.css">
<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />

@section scripts
{
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
    <script type="text/javascript" src="~/js/store_front/silver_cart.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
}

<div class="shopping-cart">
    @{ List<Food> temp = ViewBag.Foodcartlist;}
    <!-- Title -->
    <div class="title">
        Shopping Cart
    </div>
    @{ foreach(var item in temp)
            {
        <!-- Product #1 -->
        <div class="item">
            <div class="buttons">
                <span class="delete-btn">
                    <i class="fa fa-times-circle fa-2x" aria-hidden="true" style="color:black;"></i>
                </span>
            </div>
            <div class="image">
                <img src="@Url.Content(item.ImagePath)" alt="" />
            </div>
            <div class="description">
                <span>@item.FoodName</span>
            </div>
            <div class="total-price">@item.Price</div>
        </div>
        }
    }

    <div class="total">
        <h4 class="totali">Total Items : </h4><h4 class="totnum">@ViewBag.Cartcount</h4>
        <h4 class="totalam">Total Amount : </h4><h4 class="totamnum">@ViewBag.total</h4>
    </div>
    <div class="cartbuttons">
        <a class="shbutton" asp-area="" asp-controller="store_front" asp-action="gold_home" asp-route-id="@TempData["RestID"]">Back to Shopping</a>
        <a class="shbutton" asp-area="" asp-controller="store_front" asp-action="gold_checkout">Confirm & Proceed</a>
    </div>
</div>
