@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_home_Layout.cshtml";
}
<style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

     
</style>

<div class="container">
    <div style="background-image: url('~/wwwroot/resources/images/cover.jpg')"></div>
    <img src="~/resources/images/cover.jpg" class="cover-image"/>
    <div class="centered input-group ">
        <form action="">
            <input type="text" class="form-control" placeholder="Search this blog">
            <div class="input-group-append">
                <button class="btn btn-secondary" type="button">
                    <i class="fa fa-search"></i>
                </button>
            </div>
            <input type="radio" name="rdo" id="yes" checked />
            <input type="radio" name="rdo" id="no" />
            <div class="switch">
                <label for="yes">Yes</label>
                <label for="no">No</label>
                <span></span>
            </div>
        </form>

    </div>
    <div class="cover px-3">  
        <h3 class="text-center">Cover your page.</h3>
        <p class="text-center">Cover is a one-page template </p>
            <a href="#" class="btn btn-lg btn-secondary fw-bold border-white bg-white">Learn more</a>
        </p>
    </div>
</div>