@model IEnumerable<Foodilizer_Group35.Models.Customer>
@{
    Layout = "~/Views/Shared/_Foodilizer_admin_layout.cshtml";
}
@{ List<Menu> temp = ViewBag.itemdet;}
<main>
    <div class="container-fluid px-4">
        <div class="row">
            <div class="col-8">
                <h1 class="mt-4">Users</h1>
                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item active">Foodilizer Admin/Users</li>
                </ol>
                
            </div>
            
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Customer Name</th>
                        <th>Address</th>
                        <th>Email</th>
                        <th>District</th>
                        <th>Edit buttons</th>
                    </tr>
                </thead>
                <tbody>
                    @*@if (temp != null)
                    {*@

                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Username)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cemail)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.District)
                                </td>
                                
                                <td>
                                    <a class="btn btn-outline-success"asp-controller="Foodilizer_admin" asp-action="UsersDetails" asp-route-id="@item.CustomerId">Details</a>
                                    @*<a class="btn btn-danger" asp-controller="Foodilizer_admin" asp-action="UsersBan" asp-route-id="@item.CustomerId">Ban</a>*@

                                </td>
                            </tr>


                        }
                    @*}*@
                </tbody>
                <tfoot>
                    <tr>
                        <th>Customer ID</th>
                        <th>Customer Name</th>
                        <th>Address</th>
                        <th>Email</th>
                        <th>District</th>
                        <th>Edit buttons</th>
                    </tr>
                </tfoot>

            </table>
        </div>
    </div>
</main>