@model Foodilizer_Group35.Models.Customer

@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>LEISURE HEAVEN REGISTRATION</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">LEISURE <strong>HEAVEN</strong></h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-5">
                    <div class="login-wrap p-4 p-md-5">
                        <div class="d-flex">
                            <div class="w-100">
                                <h3 class="mb-4"><b>Registration</b></h3>
                                <p style="color:red">@ViewBag.Error</p>
                            </div>
                        </div>
                        <form asp-action="Create" class="login-form" id="form1">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-address-card-o"></span></div>
                                <input asp-for="Name" class="form-control rounded-left" placeholder="Name" required />
                            </div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
                                <input asp-for="Password" class="form-control rounded-left" placeholder="Password" type="password" required onkeyup="validatePass()" />
                            </div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
                                <input id="UserPass2" class="form-control rounded-left" placeholder="Confirm Password" type="password" required onkeyup="validatePass()" />
                            </div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-at"></span></div>
                                <input asp-for="Cemail" class="form-control rounded-left" placeholder="Email" type="email" required />
                            </div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-home"></span></div>
                                <input asp-for="Address" class="form-control rounded-left" placeholder="Address" required />
                            </div>
                            <div class="form-group d-flex align-items-center">
                                <div class="w-100 d-flex justify-content-end">
                                    <button onclick="formSubmit()" class="btn btn-primary rounded submit">Register</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script type="text/javascript">
        var confirmPass = false;

        function validatePass() {
            if (document.getElementById("UserPass").value == document.getElementById("UserPass2").value) {
                document.getElementById("UserPass").style.backgroundColor = "";
                document.getElementById("UserPass2").style.backgroundColor = "";
                confirmPass = true;
            } else {
                document.getElementById("UserPass").style.backgroundColor = "LightPink";
                document.getElementById("UserPass2").style.backgroundColor = "LightPink";
            }
        }

        function formSubmit() {
            if (confirmPass) {
                document.getElementById("form1").submit();
            }
        }
    </script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/popper.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/main.js"></script>

</body>
</html>